<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ld_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/ld_tv_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:text="@string/download"
      android:textAppearance="@style/TextAppearance.AppCompat.Title"
      app:fontFamily="@font/kantumruy"
      app:layout_constraintBottom_toTopOf="@id/ld_pb"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_chainStyle="packed" />

  <ProgressBar
      android:id="@+id/ld_pb"
      style="@style/Widget.AppCompat.ProgressBar.Horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:indeterminate="true"
      app:layout_constraintBottom_toTopOf="@id/ld_tv_sub_title"
      app:layout_constraintTop_toBottomOf="@id/ld_tv_title" />

  <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/ld_tv_sub_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:gravity="end"
      android:text="កំពុងទាញយក... ១០០MB នៃ ២០០MB"
      app:fontFamily="@font/kantumruy"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@id/ld_pb" />


</androidx.constraintlayout.widget.ConstraintLayout>